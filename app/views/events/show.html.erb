
<table>
	
	<tr> <td> Name  :</td> <td> <%= @event.name %></td></tr>
		<tr> <td> Date :</td> <td> <%= @event.date %></td></tr>
			<tr> <td> Description :</td> <td> <%= @event.description %></td></tr>
				<tr> <td> Address :</td> <td> <%= @event.address %></td></tr>
</table>

<%= form_for @comment do |f| %>
<table>
	<%= f.hidden_field :user_id, value: current_user.id %>
	<%= f.hidden_field :commentable_id, value: @comment.commentable_id %>
	<%= f.hidden_field :commentable_type, value: @comment.commentable_type %>
	<tr> <td> Comment</td><td> <%= f.text_area :description %> </td> </tr>
	<tr> <td> </td><td> <%= f.submit 'post' %>  </td> </tr>
</table>
<% end %>

<table>
<% @event.comments.each do |comment| %>
  <% if comment.id %>
	<tr>  <td> <%= comment.description %> &nbsp;by </td> 
        <td>  <%= comment.user.email %></td>
	  </tr>
	  <% end %>
	<% end %>
</table>