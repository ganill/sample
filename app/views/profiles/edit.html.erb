<%= form_for @user, :url=>profile_path do |f| %>
<div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :dob %><br />
    <%= f.text_field :dob, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :pic %><br />
    <%= f.file_field :pic %>
  </div>
  <%=  f.fields_for  :user_address do |address| %>
       <div class="field">
        <%= address.label :door_no %><br />
        <%= address.text_field :door_no %>
      </div>
          <div class="field">
        <%= address.label :street %><br />
        <%= address.text_field :street %>
      </div>
         <div class="field">
        <%= address.label :city %><br />
        <%= address.text_field :city %>
      </div>
          <div class="field">
        <%= address.label :state %><br />
        <%= address.text_field :state %>
      </div>
          <div class="field">
        <%= address.label :pincode %><br />
        <%= address.text_field :pincode %>
      </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>